<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="laundry.view" model="ir.ui.view">
            <field name="name">laundry.form.order</field>
            <field name="model">laundry.order</field>
            <field name="inherit_id" ref="laundry_management.laundry_order_form_view"/>
            <field name="arch" type="xml">
                <xpath expr='//button[@name="create_invoice"]' position='replace'>
                    <button name="create_invoice" class="oe_highlight" string="Create Invoice" type="object"
                            attrs="{'invisible': [('invoice_status', '=', 'invoiced')]}"/>
                </xpath>

                <xpath expr='//field[@name="order_date"]' position='replace'>
                    <field name="conv" />
                    <field name="delivery_date" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>